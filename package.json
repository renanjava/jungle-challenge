{
  "name": "my-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:all": "turbo run dev --parallel",
    "dev:gateway": "pnpm --filter api-gateway start:dev",
    "dev:auth": "pnpm --filter auth-service start:dev",
    "dev:tasks": "pnpm --filter tasks-service start:dev",
    "dev:notification": "pnpm --filter notification-service start:dev",
    "dev:web": "nvm use 22 && pnpm --filter web dev",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@nestjs/common": "11.1.7",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "11.1.7",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "2.0.4",
    "@nestjs/microservices": "11.1.7",
    "@nestjs/platform-express": "11.1.7",
    "@nestjs/platform-socket.io": "11.1.7",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "11.1.7",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "dotenv": "^17.2.3",
    "pg": "^8.13.1",
    "prettier": "^3.6.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.1",
    "turbo": "^2.5.8",
    "typeorm": "^0.3.27",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}